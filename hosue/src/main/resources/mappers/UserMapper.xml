    <insert id="addUser" parameterType="User">
        INSERT INTO user (username, password, type)
        VALUES (#{username}, #{password}, '用户')
    </insert>

    <select id="getUser" resultType="User">
        select *
        from user
        where username = #{username}
          and password = #{password}
          and type = #{type}
    </select>
