<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wangyue.mapper.WrongMapper">

    <select id="findAll" resultType="Wrong">
        select *
        from wrong
        <where>
            <if test="user_id!=''">
                user_id = #{user_id}
            </if>
        </where>
    </select>
    <select id="findWrongByid" resultType="Wrong">
        select *
        from wrong
        where id = #{id}
    </select>
    <insert id="addWrong" parameterType="Wrong">
        insert into wrong(house_id, address, date, detail, name, user_id, status)
        values (#{house_id}, #{address}, #{date}, #{detail}, #{name}, #{user_id}, #{status})
    </insert>
    <delete id="delWrong" parameterType="Wrong">
        delete
        from wrong
        where id = #{id}
    </delete>
</mapper>
